---
---
[
  {% for post in site.posts %}
  {
    "post_title"    : "{{ post.title | escape }}",
    "categories" : "{{ post.categories | join: ', ' }}",
    "tags"     : "{{ post.tags | join: ', ' }}",
    "permalink"      : "{{ site.baseurl }}{{ post.url }}",
    "post_date_formatted"     : "{{ post.date | date_to_string}}"
  }{% unless forloop.last %},{% endunless %}
  {% endfor %}
]